{% extends "ProcesoBundle:All:Especialista/layout.html.twig" %}

{% block body %}

<div class="container" ng-app="addProcessModule" ng-controller="addProcessController" ng-cloak>
  
  <main class="content" id="inicio" style="  min-height: 582px !important;" >
 
    <div class="content-container" align="center">

      <div class="col-xs-4">
          <div class="col-xs-12">
      <div class="col-xs-1"><strong>Proceso</strong></div>
      <div class="col-xs-1" style="background-color: rgb(118, 210, 118);height: 23px;width: 1%;  margin-top: 3px;
  margin-bottom: 3px;
  margin-left: 70px;"></div>
    </div>
    <div class="col-xs-12">
      <div class="col-xs-1"><strong>Actividades</strong></div>
      <div class="col-xs-1" style="background-color: rgb(166, 166, 255);height: 23px;width: 1%;  margin-top: 3px;
  margin-bottom: 3px;
  margin-left: 70px;"></div>
    </div>
    <div class="col-xs-12">
      <div class="col-xs-1"><strong>Tareas</strong></div>
      <div class="col-xs-1" style="background-color: rgb(240, 164, 164);height: 23px;width: 1%;  margin-top: 3px;
  margin-bottom: 3px;
  margin-left: 70px;"></div>
    </div>
      </div>
      <div class="col-xs-4" style="background-color: rgb(118, 210, 118);">
          <strong>{[{response.nombre}]}</strong>
      <div class="content-container">
        <div class="col-xs-12" ng-repeat="actividad in response.actividades" style="  background-color: rgb(166, 166, 255);width: 300px;margin-bottom: 15px;
  padding-top: 10%;margin-top: -8px;">
            Actividad #{[{$index+1}]} <strong>{[{actividad.nombre}]}</strong>
            <div class="row" ng-repeat= "(key,tarea) in actividad.tareas" style="background-color: rgb(240, 164, 164);width: 80%;">
            Tarea #{[{key+1}]} <strong>{[{tarea.nombre}]}</strong>
            </div>
            <br>
        </div>
        <br>
      </div>
        
      </div>
      <div class="col-xs-3">
      </div>  

      </div>
   <!--  </div> --> <!-- /.content-container -->
      
  </main> <!-- /.content -->
</div> <!-- /.container -->

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
          var response = "{{ process }}";
          var div = document.createElement('div');
          div.innerHTML = response;
          response = div.firstChild.nodeValue;
          response = JSON.parse(response);
          console.log("response",response);
    </script>
   <script src="{{ asset('bundles/proceso/js/angular/addProcess/addProcessModule.js') }}"></script>
   <script src="{{ asset('bundles/proceso/js/angular/addProcess/addProcessController.js') }}"></script>
   <script src="{{ asset('bundles/proceso/js/angular-repeat-n.js') }}"></script>
      <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
   <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>

{% endblock %}