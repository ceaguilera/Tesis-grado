{% extends "ProcesoBundle:All:Admin/layout.html.twig" %}

{% block body %}

<div class="container" ng-app="adminModule" ng-controller="adminController">

  <div class="content">

    <div class="content-container">

      <div class="content-header">
        <h2 class="content-header-title">Lista de responsables</h2>
        
      </div> <!-- /.content-header -->
      <div class="row">
        <div class="col-sm-8">
            <div class="panel panel-default">
              <!-- Default panel contents -->
              <div class="panel-heading">Listado de responsables</div>

              <!-- Table -->
              <table class="table">
                <thead>
                  <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                  </tr>
                </thead>
                <tbody ng-repeat="value in response">
                  <tr>
                    <td>{[{value.id}]}</td>
                    <td>{[{value.nombre}]}</td>
                  </tr>
                </tbody>
              </table>
            </div>
        </div>
      </div>
    </div> <!-- /.content-container -->
      
  </div> <!-- /.content -->
</div> <!-- /.container -->
{#{{dump(task)}}#}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
        <script type="text/javascript">
          var response = "{{ responsible }}";
          var div = document.createElement('div');
          div.innerHTML = response;
          response = div.firstChild.nodeValue;
          response = JSON.parse(response);
          console.log("response",response);
      </script>

   <script src="{{ asset('bundles/proceso/js/angular/admin/adminModule.js') }}"></script>
   <script src="{{ asset('bundles/proceso/js/angular/admin/adminController.js') }}"></script>
   <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
   <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>

{% endblock %}